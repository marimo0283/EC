<div class="container">
  <div class="row">
    <table>
      <thead>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.item_image, size: "290x200" %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
            <td>
              <%#= link_to cart_item_path(item.id) do %>
                削除する
              <%# end %>
            </td>
          </tr>
        <% @total +=  cart_item.subtotal %>
      <% end %>
      </tbody>
    </table>
    <%= link_to items_path do %>
      買い物を続ける
    <% end %>

  </div>
</div>